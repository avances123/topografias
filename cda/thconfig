code metapost #thin grey cave splays, yellow duplicates and dashed approximate legs
  def l_survey_cave (expr P) =
    T:=identity;
    pickup PenC;
    if (ATTR__shotflag_splay):
      drawoptions(withcolor(0.5,0.9,0.9));
      thdraw P;
      drawoptions();
    else: 
      drawoptions(withcolor(0.9,0,0));
      thdraw P;
      drawoptions();
    fi;
  enddef;
  endcode
 
 endlayout
 

