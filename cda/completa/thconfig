encoding  utf-8
 language es
 source cova.th
 
 layout todo
  base-scale 1 500
  map-header 0 100 sw # pone el header arriba a la izquierda
  statistics topo-length on #on
  statistics explo-length on
  #rotate 30 #on
  symbol-show group centerline
  #symbol-hide point station:temporary
  symbol-hide line wall
  symbol-hide group text
  legend on
  debug off
  transparency on
  opacity 20
  #color map-fg [00 70 90]
  symbol-hide point blocks
  symbol-hide line contour
  symbol-hide line floor-step
  symbol-hide area clay

  #symbol-show point station:temporary



  code metapost
   def l_survey_cave (expr P) =
     T:=identity;
     pair zz[];
     pickup PenC;
     for t = 0 upto length P - 1:
       zz1 := point t of P;
       zz2 := point t+1 of P;
       #message "zz1: " & str zz1;
       draw zz1 -- zz2 withcolor (0.8,0.0,0.0);
     endfor;
   enddef;
 
 endlayout
 
select mapa@gemelas.CDA
select mapa@caverna.CDA
select mapa@stress.CDA
select mapa@las_T.CDA
 
 
